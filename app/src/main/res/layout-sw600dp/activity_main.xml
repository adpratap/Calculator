<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnadd"
        android:layout_width="113dp"
        android:layout_height="73dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="111dp"
        android:layout_toStartOf="@+id/btndiv"
        android:text="ADD" />

    <Button
        android:id="@+id/btnsub"
        android:layout_width="107dp"
        android:layout_height="73dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btnadd"
        android:layout_marginEnd="22dp"
        android:text="SUB" />

    <Button
        android:id="@+id/btnmul"
        android:layout_width="113dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btnadd"
        android:layout_marginBottom="28dp"
        android:text="MUL" />

    <Button
        android:id="@+id/btndiv"
        android:layout_width="110dp"
        android:layout_height="78dp"
        android:layout_alignStart="@+id/btnsub"
        android:layout_alignTop="@+id/btnmul"
        android:text="DIV" />

    <EditText
        android:id="@+id/et2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnmul"
        android:layout_alignStart="@+id/et1"
        android:ems="10"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/et1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="99dp"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="51dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/btnadd"
        android:layout_marginStart="27dp"
        android:text="N1" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="53dp"
        android:layout_height="34dp"
        android:layout_above="@+id/btnmul"
        android:layout_alignStart="@+id/textView"
        android:text="N2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="53dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/et3"
        android:layout_alignStart="@+id/textView"
        android:text="Result" />

    <EditText
        android:id="@+id/et3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnmul"
        android:layout_alignStart="@+id/et2"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="216dp"
        android:layout_height="46dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="CALCULATOR"
        android:textColor="@color/colorPrimary"
        android:textSize="33.9dp"
        android:textStyle="bold" />


</RelativeLayout>